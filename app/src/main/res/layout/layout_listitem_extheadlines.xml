<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/RelativeLatestNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:padding="20dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/ChipWorldNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Latest World News"
            app:chipBackgroundColor="@color/purple_200" />

        <androidx.cardview.widget.CardView
            android:id="@+id/NewsCardView"
            android:layout_width="314dp"
            android:layout_height="300dp"
            android:layout_below="@+id/ChipWorldNews"
            android:layout_marginTop="-14dp"
            app:cardBackgroundColor="#0000FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/RellayoutWithNewsImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

                <ImageView
                    android:id="@+id/ImageNews"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:src="@drawable/materialwall" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ChipURLLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ImageNews"
                    android:layout_centerHorizontal="true"
                    android:text="Press Here For Details" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ChipNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/NewsCardView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Headline Title"
            android:textColor="@color/purple_200"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/NewsDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChipNewsTitle"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Headline Description"
            android:textColor="@color/teal_200" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewsDescriptionText">

            <com.google.android.material.chip.Chip
                android:id="@+id/PrevArticleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Previous Article"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/NextArticleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Next Article"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>